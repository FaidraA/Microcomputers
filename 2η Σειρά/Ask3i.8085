 adr0: MVI C,08H      ;ο C παίρνει την τιμή 08Η
       LDA 2000H      ;διαβάζουμε την είσοδο και την αποθηκεύουμε στον Α
       CPI 00H        ;δες αν ο Α είναι 0
       JZ adr4
 adr1: RAR            ;δεξιά περιστροφή του Α
       JC adr2        ;αλμα αν carry bit=1 στην adr2(δηλαδή αν MSB=1)
       DCR C          ;αυξάνεται ο C κατά 1
       JNZ adr1       ;αν C>0 επιστρέφει στο adr1
 adr2: MVI A,80H      ;(A)=10000000
       DCR C
 adr3: RAR
       DCR C 
       JNZ adr3
adr4:  STA 3000H      ;εμφανίζεται το Α ως έξοδος
       JMP adr0
      END             